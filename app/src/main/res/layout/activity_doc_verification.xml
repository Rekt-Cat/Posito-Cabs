<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Auth.DocVerificationActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"
                android:text="Document Verification"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="192dp"
                android:layout_height="166.4dp"
                android:src="@drawable/doc_img"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_card"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/dl_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driving License"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:id="@+id/dl_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:text="Upload valid driving licence for verification. Ensuring compliance, privacy, and security of your personal information."/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/dl_file"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/my_orange1"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:layout_marginEnd="10dp"/>

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/dl_btn"
                                    android:layout_width="78dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="end"
                                    android:background="@drawable/buttoncolourbg"
                                    android:text="Upload"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/black"
                                    android:textAllCaps="false"
                                    android:textSize="10sp"
                                    android:padding="8dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_card"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/vehicle_insurance_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Insurance"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:id="@+id/vehicle_insurance_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:text="Upload vehicle insurance for verification. Ensuring coverage and compliance. Protecting you and your passengers."
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/vehicle_insurance_file"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/my_orange1"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:layout_marginEnd="10dp"/>

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/vehicle_insurance_btn"
                                    android:layout_width="78dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="end"
                                    android:background="@drawable/buttoncolourbg"
                                    android:text="Upload"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/black"
                                    android:textAllCaps="false"
                                    android:textSize="10sp"
                                    android:padding="8dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_card"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/pan_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pan Card"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:id="@+id/pan_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:text="Upload PAN card for verification. Ensuring legal compliance. Protecting your identity and financial transactions."/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/pan_file"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/my_orange1"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:layout_marginEnd="10dp"/>

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/pan_btn"
                                    android:layout_width="78dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="end"
                                    android:background="@drawable/buttoncolourbg"
                                    android:text="Upload"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/black"
                                    android:textAllCaps="false"
                                    android:textSize="10sp"
                                    android:padding="8dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_card"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/vehicle_permit_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Permit"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:id="@+id/vehicle_permit_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:text="Upload vehicle permit for verification. Ensuring legal compliance. Authorizing your vehicle for transportation services."
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/vehicle_permit_file"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/my_orange1"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:layout_marginEnd="10dp"/>

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/vehicle_permit_btn"
                                    android:layout_width="78dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="end"
                                    android:background="@drawable/buttoncolourbg"
                                    android:text="Upload"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/black"
                                    android:textAllCaps="false"
                                    android:textSize="10sp"
                                    android:padding="8dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="18dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/proceed_btn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttoncolourbg"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:text="Proceed"
                    android:textAllCaps="false"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>