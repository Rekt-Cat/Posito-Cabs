<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SignInScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="400dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/iluustration_cab_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="69dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Welcome Back!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="42dp"
                android:background="@drawable/buttonbg"
                android:drawableStart="@drawable/icons8_facebook"
                android:fontFamily="@font/poppins"
                android:padding="20dp"
                android:text="Connect with facebook"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/google"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:background="@drawable/buttonbg"
                android:drawableStart="@drawable/icons8_google"
                android:fontFamily="@font/poppins"
                android:padding="20dp"
                android:text="Connect with Google"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="37dp">
                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#707070" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="OR"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#707070" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/buttoncolourbg"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="23dp"
                android:padding="20dp"
                android:text="Sign in with password"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="21dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Don't have an account?"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/registerscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:background="@drawable/buttonnobg"
                    android:textColor="#0091FF"
                    android:elevation="0dp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
