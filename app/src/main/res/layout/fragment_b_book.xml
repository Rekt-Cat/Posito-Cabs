<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Views.MainScreen.RiderMain.Fragment.BottomSheetFrag.BBookFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_ic"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_black_img"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ride_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prime Sedan"
                    android:textSize="16sp"
                    android:textColor="@color/white_75"
                    android:fontFamily="@font/poppins_medium"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ride_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:25pm ."
                        android:textSize="12sp"
                        android:textColor="@color/white_75"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/ride_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 min away"
                        android:textSize="12sp"
                        android:textColor="@color/white_75"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9"
                    android:textSize="18sp"
                    android:textColor="@color/white_75"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/ride_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128.7"
                    android:textSize="18sp"
                    android:textColor="@color/white_75"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/ride_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comfortable sedans, top-quality"
                android:textSize="12sp"
                android:textColor="@color/white_75"
                android:fontFamily="@font/poppins_medium"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/book_ride_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/buttoncolourbg"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="5dp"
                    android:text="Book Ride"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>