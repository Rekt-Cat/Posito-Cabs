<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.MainScreen.RiderMain.Fragment.BottomSheetFrag.BHomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestions"
            android:textSize="16sp"
            android:textColor="@color/white_75"
            android:layout_marginTop="12sp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ride_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:background="@color/card_bg_orange"
                    android:backgroundTint="@color/card_bg_orange">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="20dp">

                        <ImageView
                            android:layout_width="65.6dp"
                            android:layout_height="59.2dp"
                            android:src="@drawable/car_img"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride"
                    android:textSize="16sp"
                    android:textColor="@color/white_75"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/rental_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:background="@color/card_bg_orange"
                    android:backgroundTint="@color/card_bg_orange">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="20dp">

                        <ImageView
                            android:layout_width="65.6dp"
                            android:layout_height="59.2dp"
                            android:src="@drawable/car_rental_img"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental"
                    android:textSize="16sp"
                    android:textColor="@color/white_75"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/intercity_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        android:background="@color/card_bg_orange"
                        android:backgroundTint="@color/card_bg_orange">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingHorizontal="20dp">

                            <ImageView
                                android:layout_width="65.6dp"
                                android:layout_height="59.2dp"
                                android:src="@drawable/car_black_img"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intercity"
                        android:textSize="16sp"
                        android:textColor="@color/white_75"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>